<% include ../partials/header%>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp Campgrounds!</h1>
            <p>Some text with a punchline how great is this site</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular campgrounds</h3>
        </div>
    </div>
    <div class="row" style="display: flex; flex-wrap: wrap">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=camp.image%>">
                    <div class="caption text-center">
                        <h4 id="camp-name-index"><%=camp.name%></h4>
                    </div>
                    <!--<div class="thumbnail">-->
                        <p class="center"> <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary text-center">More info</a></p>
                    <!--</div>-->
                </div>
            </div>
        <% }); %>
    </div>    
</div>
<%include ../partials/footer%>